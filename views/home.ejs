<!-- The "include" function in EJS is used to include a piece of reusable code (another EJS file) in the current EJS file. -->
<%- include('partials/header') %>
    <h1>Home</h1>
    <%= homeStartingContent %>
        <% posts.forEach(function(post){ %>
            <h1><%= post.title %></h1>
            <!-- To truncate String in JS -->
            <p><%= post.content.substring(0,100)+"..." %><a href="/posts/<%=post.title%>">Read More</a></p>
        <% }) %>

<%- include('partials/footer') %>