<!-- The "include" function in EJS is used to include a piece of reusable code (another EJS file) in the current EJS file. -->
<%- include('partials/header') %>
    <h1>Home</h1>

    <%= homeStartingContent %>

        <% posts.forEach(function(post){ %>
            <h1>
                <%= post.title %>
            </h1>

            <p>
                <%= post.content %>
            </p>
            <% }) %>

                <%- include('partials/footer') %>